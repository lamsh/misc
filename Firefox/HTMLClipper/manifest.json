{
  "manifest_version": 2,
  "name": "HTML Clipper",
  "version": "1.0.0",

  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["content.js"]
    }
  ],

  "browser_action": {
    "default_title": "HTML Clipper"
  }
}
